<div class="contents row">
<div class="container">
<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="field">
 <%= f.label :ユーザー名（必須） %>
 <%= f.text_field :username, autofocus: true, placeholder:"例) 山田太郎（10文字以内）", maxlength:"10"%>
 </div>

  <div class="field">
    <%= f.label :メールアドレス（必須） %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（必須） %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認（必須） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

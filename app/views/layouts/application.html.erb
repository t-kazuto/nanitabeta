<!DOCTYPE html>
<html>
  <head>
    <title>Nanitabeta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">NANITABETA</a></h1>

        <% if user_signed_in? %>
         <div class="grid-6">
          <%= link_to current_user.username, "#", class: "post" %>
          <%= link_to "投稿", new_restaurant_path, class: "post" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post" %>
         </div>
        <% else %>
         <div class="grid-6">
          <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
         </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
        <footer>
      <p>
        Copyright NANITABETA 2020.
      </p>
    </footer>
  </body>
</html>
